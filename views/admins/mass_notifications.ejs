<% layout('../layouts/main') -%>
<%-partial('../partials/nav')%>
<%-partial('../partials/messages')%>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Главная</a></li>
        <li class="breadcrumb-item"><a href="/admin">Админ</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%= title %></li>
    </ol>
</nav>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h3 class="text-center">Создание новой рассылки уведомлений</h3>
            <hr>
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <form action="/admin/users/<%= data.id %>/notifications" method="POST">
                        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
        
                        <div class="form-group">
                            <label for="validationTextarea">Название уведомления</label>
                            <input type="text" name="name" id="validationTextarea" class="form-control" placeholder="Название уведомления">
                        </div>
        
                        <div class="form-group">
                            <label for="validationTextarea">Текст уведомления</label>
                            <textarea name="text" class="form-control" id="validationTextarea" placeholder="Текст уведомления"></textarea>
                        </div>
        
                        <button type="submit" class="btn btn-info btn-block" onclick="return confirm('Точно выполнить данное действие?')">Отправить</button>
                    </form>
                </div>
            </div>
            <br>
        </div>
        <div class="col-md-12">
            <h3 class="text-center">История рассылок уведомлений</h3>
            <hr>
            <%if (data && data.length > 0) {%>
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Пользователь</th>
                        <th scope="col">Админ</th>
                        <th scope="col">Название</th>
                        <th scope="col">Тип</th>
                        <th scope="col">Статус</th>
                        <th scope="col">Дата создания</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(function(element) { %>
                    <tr>
                        <th><%=element.id%></th>
                        <th><%=element.adminNotifications.login%></th>
                        <th><%=element.name%></th>
                        <th><%=element.typeName%></th>
                        <th><%=element.statusName%></th>
                        <th><%=element.createdAt%></th>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
            <%} else {%>
            <h3 class="text-center">Нет данных</h3>
            <%}%>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <%-partial('../partials/pagination')%>
        </div>
    </div>
</div>