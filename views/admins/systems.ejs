<% layout('../layouts/main') -%>
<%-partial('../partials/nav')%>
<%-partial('../partials/messages')%>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Главная</a></li>
        <li class="breadcrumb-item"><a href="/admin">Админ</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%= title %></li>
    </ol>
</nav>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3 class="text-center">Технические работы</h3>
            <hr>
            <form action="/admin/systems/technical-work" method="POST">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>">

                <div class="form-group">
                    <label for="exampleFormControlSelect1">Статус</label>
                    <select class="form-control" name="status" id="exampleFormControlSelect1">
                        <option value="0" <%= data.technicalWork.status === 0 ? 'selected' : ''%>>Отключены</option>
                        <option value="1" <%= data.technicalWork.status === 1 ? 'selected' : ''%>>Включены | 1-й уровень</option>
                        <option value="2" <%= data.technicalWork.status === 2 ? 'selected' : ''%>>Включены | 2-й уровень</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="validationTextarea">Сообщение пользователям</label>
                    <textarea name="message" class="form-control" id="validationTextarea"
                        placeholder="Сообщение пользователям" required><%= data.technicalWork.message ? data.technicalWork.message : ''%></textarea>
                </div>

                <button type="submit" class="btn btn-danger btn-block"
                    onclick="return confirm('Точно выполнить данное действие?')">Изменить статус работ</button>
            </form>
        </div>
        <div class="col-md-6">
            <h3 class="text-center">Сообщение в шапке</h3>
            <hr>
            <form action="/admin/systems/message" method="POST">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>">

                <div class="form-group">
                    <label for="validationTextarea">Сообщение</label>
                    <textarea name="message" class="form-control" id="validationTextarea" placeholder="Сообщение"><%= data.message.message ? data.message.message : ''%></textarea>
                </div>

                <button type="submit" class="btn btn-info btn-block"
                    onclick="return confirm('Точно выполнить данное действие?')">Обновить</button>
            </form>
        </div>
    </div>
</div>