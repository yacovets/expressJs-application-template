<% layout('../layouts/main') -%>
<%-partial('../partials/nav')%>
<%-partial('../partials/messages')%>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Главная</a></li>
        <li class="breadcrumb-item"><a href="/admin">Админ</a></li>
        <li class="breadcrumb-item"><a href="/admin/users">Пользователи</a></li>
        <li class="breadcrumb-item"><a href="/admin/users/<%=data.user.id%>">Пользователь</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%= title %></li>
    </ol>
</nav>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form method="POST">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" name="email" value="<%= data.user.email %>" id="email" placeholder="Email">
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" name="verifEmail" value="1" type="checkbox" id="gridCheck">
                        <label class="form-check-label" for="gridCheck">
                            Отправить письмо для верификации
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-check-label" for="emailStatus">
                        Статус почты
                    </label>
                    <br>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" <%= data.user.status_email === 1 ? 'checked' : '' %> type="radio" name="emailStatus" id="inlineRadio1" value="1">
                        <label class="form-check-label" for="inlineRadio1">Верифицирована</label>
                      </div>
                      <div class="form-check form-check-inline">
                        <input class="form-check-input" <%= data.user.status_email === 2 ? 'checked' : '' %> type="radio" name="emailStatus" id="inlineRadio2" value="2">
                        <label class="form-check-label" for="inlineRadio2">Не верифицирована</label>
                      </div>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Роль</label>
                    <select class="form-control" name="role" id="exampleFormControlSelect1">
                        <% for (let i in data.roles) {%>
                        <option <%= Number(i) === data.user.role ? 'selected' : '' %> value="<%= i %>"><%= data.roles[i].name %></option>
                        <%}%>
                    </select>
                </div>
                <button type="submit" class="btn btn-info btn-block">Сохранить изменения</button>
            </form>
        </div>
    </div>
</div>