<% layout('../layouts/main') -%>
<%-partial('../partials/nav')%>
<%-partial('../partials/messages')%>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Главная</a></li>
        <li class="breadcrumb-item"><a href="/admin">Админ</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%= title %></li>
    </ol>
</nav>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <%if (data && data.length > 0) {%>
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Пользователь</th>
                        <th scope="col">Админ</th>
                        <th scope="col">Название</th>
                        <th scope="col">Тип</th>
                        <th scope="col">Статус</th>
                        <th scope="col">Дата создания</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(function(element) { %>
                    <tr>
                        <th><%=element.id%></th>
                        <th><%=element.userNotifications.login%></th>
                        <th><%if (element.adminNotifications.login) {%><%=element.adminNotifications.login%><%}%></th>
                        <th><%=element.name%></th>
                        <th><%=element.typeName%></th>
                        <th><%=element.statusName%></th>
                        <th><%=element.createdAt%></th>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
            <%} else {%>
            <h3 class="text-center">Нет данных</h3>
            <%}%>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <%-partial('../partials/pagination')%>
        </div>
    </div>
</div>