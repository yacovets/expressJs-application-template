<% layout('../layouts/main') -%>
<%-partial('../partials/nav')%>
<%-partial('../partials/messages')%>

<div class="container-fluid">
    <div class="row">

        <%if (data && data.length > 0) {%>

            <% data.forEach(function(element) { %>

                <div class="col-md-3">
                    <br>
                    <div class="card" style="<%= element.status === 2 ? `background-color: rgba(0, 255, 0, 0.479);` : '' %>" >
                        <div class="card-body">
                            <h5 class="card-title"><%= element.name %></h5>
                            <p class="card-text"><%- element.text %></p>
                        </div>
                    </div>
                </div>

            <% }); %>

        <%} else {%>
        <div class="col-md-12">
            <br>
            <h3 class="text-center">Нет данных</h3>
        </div>
        <%}%>

    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <%-partial('../partials/pagination')%>
        </div>
    </div>
</div>